      <%= form_for(@hostname) do |f| %>
      <div class="field alias">
        <div class="row collapse">
          <div class="small-9 columns">
            <%= f.text_field :name %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">.alias.re</span>
          </div>
        </div>
      </div>

      <div class="field ipaddress">
        <i class="fi-arrow-right large"></i><%= f.text_field :ipaddress %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Alias', class: 'button' %>
      </div>
    <% end %>
